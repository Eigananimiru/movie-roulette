<h1>今日の映画ルーレット</h1>
<button onclick="pickMovie()">ランダムに選ぶ</button>
<div class="result" id="result"></div>

<script>
const movies=[
"インセプション",
"ラ・ラ・ランド",
"ショーシャンクの空に",
"マッドマックス",
"最強のふたり",
"ナイブズアウト",
"バックトゥザフューチャー",
"パラサイト"
];

function pickMovie(){
const random=Math.floor(Math.random()*movies.length);
document.getElementById("result").innerText=movies[random];
}
</script>

